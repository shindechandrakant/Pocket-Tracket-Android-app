<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="7dp"
    android:elevation="7dp"
    android:padding="30dp"
    android:layout_height="220dp">

    <EditText
        android:id="@+id/et_add_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center_horizontal"
        android:hint="@string/add_income"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/et_add_income_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="30dp"
        android:inputType="textCapWords"
        android:layout_marginTop="78dp"
        android:textSize="20dp"
        android:hint="@string/add_income_note_hint"
        />


    <Button
        android:id="@+id/button_add_income"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add Amount"
        android:textAllCaps="false"
        android:layout_marginBottom="15dp"
        android:background="@drawable/addincome_button"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal|bottom"
        />
</androidx.cardview.widget.CardView>